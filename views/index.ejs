<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/all.min.css" />
    <link rel="stylesheet" href="css/main.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg">
      <div class="container">
        <a style="color: white" class="navbar-brand" href="#"
          >Location Company
          <i style="color: #d39f0d" class="fa-solid fa-location-dot"></i>
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#main"
          aria-controls="main"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <i class="fa-solid fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="main">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link p-2 p-lg-3 active"
                aria-current="page"
                href="./index.html"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link p-2 p-lg-3" href="./user/add">Add Product</a>
            </li>
          </ul>
          <div class="search ps-2 pe-3 d-none d-lg-block">
            <i class="fa-solid fa-magnifying-glass"></i>
          </div>
        </div>
      </div>
    </nav>
    <!-- landing -->
    <div class="landing d-flex justify-content-center align-items-center">
      <img src="./images/item_6321f9d69ce411663171030.jpg" alt="" />
    </div>
    <!-- landing -->
    <!-- المعرض -->
    <section class="galearys">
      <div class="container">
        <h1>Gallery</h1>
        <p style="font-size: xx-large; color: #868d8a">company name!</p>
        <div class="galeary">
          <ul>
            <li class="active">all</li>
            <li>type one</li>
            <li>type two</li>
            <li>type three</li>
          </ul>
          <div class="content">
            <% arr.forEach((item, index) => { %>
            <div class="box show" data-type="<%= item.type %>">
              <div class="image" style="position: relative">
                <a
                  style="width: 100%; position: absolute; height: 100%"
                  href="./view/<%= item._id %>"
                >
                </a>
                <img src="../images/<%= item.image %>" alt="" />
              </div>
              <div class="text">
                <h4><%= item.comp %></h4>
                <h4><%= item.type %></h4>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
        <button class="more" id="more">More Product</button>
      </div>
    </section>
    <!-- المعرض -->
    <!-- fotter -->
    <footer>
      <div class="container">
        <div class="addris">
          <i style="color: #d39f0d" class="fa-solid fa-location-dot"></i>Company
          Location
        </div>
        <div class="coby">created By <span>HaedrKebalwi</span></div>
        <div class="phone">للتواصل <span>0973849263</span></div>
      </div>
    </footer>
    <!-- fotter -->
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/all.min.js"></script>
    <script src="./js/indix.js"></script>
  </body>
</html>
